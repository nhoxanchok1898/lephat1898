# Environment Configuration for Paint Store E-commerce
# Copy to .env and fill in production values

# ============= Django Settings =============
SECRET_KEY=your-secret-key-here-min-50-chars-with-random-characters
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
SITE_URL=http://localhost:8000
SITE_NAME=Paint Store

# ============= Database Configuration =============
DB_ENGINE=django.db.backends.postgresql
DB_NAME=lephat
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# For development with SQLite:
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# ============= Redis Configuration =============
REDIS_URL=redis://127.0.0.1:6379/1
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# ============= Email Configuration =============
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@lephat.com

# ============= Payment Gateway - Stripe =============
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============= Payment Gateway - PayPal =============
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
# For production: PAYPAL_MODE=live

# ============= Monitoring & Error Tracking =============
# Sentry (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENVIRONMENT=development
# For production: ENVIRONMENT=production

# ============= Admin Configuration =============
ADMIN_EMAIL=admin@lephat.com

# ============= AWS S3 (Optional - for media files) =============
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1

# ============= Production Security Settings =============
# Uncomment for production deployment:
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
